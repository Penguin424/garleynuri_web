        src="https://arkanaestudio.s3.us-east-2.amazonaws.com/Whats_App_Image_2024_09_03_at_23_01_54_5_c29ca8384a.jpeg?updated_at=2024-09-11T17:03:20.700Z"
        alt="some building"
        title="2"
      />
    </div>
    <div class="w-full h-full lg:row-span-2">
      <PortfolioCard
        src="https://arkanaestudio.s3.us-east-2.amazonaws.com/Whats_App_Image_2024_09_03_at_23_01_54_4e7c6c056f.jpeg?updated_at=2024-09-11T17:03:20.831Z"
        alt="some building"
        title="3"
      />
    </div>
    <div class="w-full h-full lg:col-span-2">
      <PortfolioCard
        src="https://arkanaestudio.s3.us-east-2.amazonaws.com/Whats_App_Image_2024_09_03_at_23_01_54_4_0357a89f35.jpeg?updated_at=2024-09-11T17:03:20.658Z"
